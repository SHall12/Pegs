<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shanekevinsam.pegs.MainActivity">

    <Button
        android:id="@+id/btn_startGame"
        android:text="@string/start"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="startGameActivity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn_seeScores"
        android:text="@string/scores"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="startScoreActivity"
        android:layout_below="@+id/btn_startGame"
        android:layout_alignLeft="@+id/btn_startGame"
        android:layout_alignStart="@+id/btn_startGame" />
    <Button
        android:id="@+id/btn_settings"
        android:text="@string/settings"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="startSettingsActivity"
        android:layout_below="@+id/btn_seeScores"
        android:layout_alignLeft="@+id/btn_seeScores"
        android:layout_alignStart="@+id/btn_seeScores" />

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/pegs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/pegs_title" />
</RelativeLayout>
