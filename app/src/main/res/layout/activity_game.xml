<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shanekevinsam.pegs.GameActivity">

    <!-- <ImageView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /> -->
    <GridLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="9"
        android:rowCount="5">
        <Button
            android:id="@+id/btn_04"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_03"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_13"
            android:layout_column="5"
            android:layout_row="1"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_02"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_12"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_22"
            android:layout_column="6"
            android:layout_row="2"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_01"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_11"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_21"
            android:layout_column="5"
            android:layout_row="3"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_31"
            android:layout_column="7"
            android:layout_row="3"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_00"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_10"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_20"
            android:layout_column="4"
            android:layout_row="4"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_30"
            android:layout_column="6"
            android:layout_row="4"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
        <Button
            android:id="@+id/btn_40"
            android:layout_column="8"
            android:layout_row="4"
            android:layout_width="@dimen/sizeOfButton"
            android:text="@string/defaultPeg"
            android:onClick="boardClicked"/>
    </GridLayout>

    <TextView
        android:id="@+id/txt_pegsMessage"
        android:text="@string/pegs_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/board"
        android:padding="16dp"/>
    <TextView
        android:id="@+id/txt_PegsLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/txt_pegsMessage"
        android:layout_toRightOf="@id/txt_pegsMessage"
        android:layout_below="@id/board"
        android:text="@string/defaultPeg"
        android:padding="16dp"/>
</RelativeLayout>
